{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/src/**/*",
      "**/samples/**/*",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/docs/**",
      "!**/vendor/**",
      "!**/assets/**",
      "!**/*.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
    "includes": ["**", "!**/dist/**", "!**/docs/**", "!**/vendor/**", "!**/assets/**", "!**/*.d.ts"]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "error",
        "useExportType": "error",
        "useConst": "off",
        "noParameterAssign": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 80
          }
        },
        "noForEach": "off",
        "noBannedTypes": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "noCommaOperator": "error",
        "noArguments": "off",
        "noAdjacentSpacesInRegex": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedPrivateClassMembers": "off",
        "useExhaustiveDependencies": "error",
        "noUnreachable": "error",
        "noConstantCondition": "error",
        "noInvalidUseBeforeDeclaration": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noExplicitAny": "off",
        "noConfusingVoidType": "error",
        "noPrototypeBuiltins": "error",
        "noImplicitAnyLet": "error",
        "noAsyncPromiseExecutor": "error",
        "noAssignInExpressions": "error",
        "noShadowRestrictedNames": "error",
        "noThenProperty": "off",
        "noRedeclare": "error"
      }
    },
    "includes": ["**", "!**/dist/**", "!**/docs/**", "!**/vendor/**", "!**/assets/**", "!**/*.d.ts"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "globals": [
      "document",
      "window",
      "console",
      "navigator",
      "requestAnimationFrame",
      "cancelAnimationFrame",
      "setTimeout",
      "clearTimeout",
      "setInterval",
      "clearInterval",
      "URL",
      "Blob",
      "File",
      "FileReader",
      "WebGL2RenderingContext",
      "WebGLRenderingContext",
      "WebGLProgram",
      "WebGLShader",
      "WebGLTexture",
      "WebGLBuffer",
      "WebGLFramebuffer",
      "WebGLRenderbuffer",
      "WebGLUniformLocation",
      "WebGLActiveInfo",
      "WebGLShaderPrecisionFormat",
      "WebGLContextEvent",
      "ImageData",
      "ImageBitmap",
      "HTMLImageElement",
      "HTMLCanvasElement",
      "HTMLVideoElement",
      "OffscreenCanvas",
      "AudioContext",
      "GainNode",
      "AudioBuffer",
      "AudioBufferSourceNode",
      "AnalyserNode",
      "MediaStreamAudioSourceNode"
    ]
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": true
    }
  }
}
