{
  "name": "rhodonite",
  "version": "0.3.9",
  "keywords": [
    "rhodonite",
    "webgl",
    "webgl2",
    "3d",
    "web3d",
    "typescript"
  ],
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/esm",
    "VERSION-FILE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actnwit/RhodoniteTS.git"
  },
  "author": "Yuki Shimada <emadurandal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "setup": "npx shx cp ./pre-commit ./.git/hooks",
    "prepare": "npm run build-ci && node build-samples",
    "build": "npm run build-esm && npm run build-umd-dev && npm run build-umd-prod",
    "build-ci": "npm run build-esm && npm run build-umd-dev && npm run build-umd-prod",
    "build-umd-dev": "npm run create-VERSION-FILE && npx webpack --config webpack.config.development.js",
    "build-umd-prod": "npm run create-VERSION-FILE && npx webpack --config webpack.config.production.js",
    "build-esm": "npm run create-VERSION-FILE && npx webpack --config webpack.config.common_module.js",
    "build-type": "tsc --emitDeclarationOnly",
    "build-samples": "node build-samples",
    "prepublishOnly": "npm run build && npm run test",
    "test": "npm run test-unit && npm run test-e2e",
    "test-unit": "npm run test-unit-part -- ./src",
    "test-unit-part": "npx jest --config jest.config.js",
    "test-e2e": "npm run test-e2e-part -- ./samples/test_e2e",
    "test-e2e-part": "npx jest --config jest.config.e2e.js",
    "test-e2e-update": "npm run test-e2e-part -- --updateSnapshot ./samples/test_e2e",
    "test-coverage": "npx jest --coverage",
    "doc": "typedoc --exclude '**/*+(test|d).ts' --out ./docs/api/ ./src/",
    "yarn-pack": "yarn pack -f rhodonite-tmp.tgz",
    "start": "node server.js",
    "create-VERSION-FILE": "npx shx touch VERSION-FILE",
    "gts-lint": "gts lint ./src ./samples",
    "gts-clean": "gts clean ./src ./samples",
    "gts-fix": "gts fix ./src ./samples"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/webgl-ext": "^0.0.32",
    "@types/webgl2": "^0.0.5",
    "@types/webvr-api": "^0.0.35",
    "@typescript-eslint/parser": "4.15.1",
    "express": "^4.17.1",
    "gts": "^3.1.0",
    "http-server": "^0.12.3",
    "jest": "^26.6.3",
    "jest-image-snapshot": "^4.3.0",
    "jest-puppeteer": "^4.2.0",
    "puppeteer": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "shaderity-loader": "^0.0.13",
    "shelljs": "^0.8.3",
    "shx": "0.3.3",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "typedoc": "0.20.27",
    "typescript": "^4.0.3",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "require": "^2.4.20",
    "requirejs": "^2.3.6",
    "shaderity": "0.1.27",
    "version-loader": "^0.1.0"
  },
  "description": "Rhodonite is a WebGL library written in TypeScript.",
  "bugs": {
    "url": "https://github.com/actnwit/RhodoniteTS/issues"
  },
  "homepage": "https://github.com/actnwit/RhodoniteTS#readme",
  "directories": {
    "doc": "docs"
  },
  "engines": {
    "node": "14.x"
  }
}
