  "scripts": {
    "build": "yarn build-umd && yarn build-es",
    "build-es": "npx rollup -c ./rollup.config-es.js",
    "build-umd": "npx rollup -c ./rollup.config-umd.js",
    "test": "JEST_PUPPETEER_CONFIG=jest-puppeteer-config.js jest",
    "test-update": "JEST_PUPPETEER_CONFIG=jest-puppeteer-config.js jest --updateSnapshot",
    "test-coverage": "jest --coverage",
    "doc": "typedoc --includeDeclarations --exclude '**/*.test.ts' --out ./docs/ ./src/"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "gl": "^4.1.1",
    "jest": "^23.6.0",
    "jest-image-snapshot": "^2.7.0",
    "jest-puppeteer": "^3.7.0",
    "puppeteer": "^1.11.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "ts-jest": "^23.10.4",
    "@types/node": "^10.12.18",
    "@types/webgl-ext": "^0.0.30",
    "@types/webgl2": "^0.0.4",
    "typedoc": "^0.13.0",
    "express": "^4.16.4",
    "http-server": "^0.11.1",
    "typescript": "^3.1.4"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12"
  }
