{
  "name": "RhodoniteTS",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/emadurandal/RhodoniteTS.git",
  "author": "Yuki Shimada <emadurandal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npx rollup -c ./rollup.config.js",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "doc": "typedoc --includeDeclarations --exclude '**/*.test.ts' --out ./docs/ ./src/"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globalSetup": "./globalSetup.js",
    "setupTestFrameworkScriptFile": "./setup.js",
    "globalTeardown": "./globalTeardown.js",
    "preset": "jest-puppeteer",
    "testEnvironment": "./testEnvironment.js"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "gl": "^4.1.1",
    "jest": "^23.6.0",
    "jest-image-snapshot": "^2.7.0",
    "jest-puppeteer": "^3.7.0",
    "puppeteer": "^1.11.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "ts-jest": "^23.10.4",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.4"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12"
  }
}
